{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": ".",
        "rootDir": "src",
        "strict": true,
        "target": "ES6"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
